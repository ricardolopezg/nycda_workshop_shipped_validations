
  <%= form_for @profile do |f| %>
    <div class="field">
      <%= f.label :username %><br />
      <%= f.username_field :username, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :fname %><br />
      <%= f.fname_field :fname, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :lname %><br />
      <%= f.lname_field :lname, autofocus: true %>
    </div>
  <%= end %>