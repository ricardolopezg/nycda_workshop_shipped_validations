<!DOCTYPE html>
<html>
<head>
  <title>ShippedApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <ul>
  <% if current_user %>
    <li><%= edit_profile_nav_link %></li>
    <li><%= create_and_find_jobs_nav_link %></li>
    <li><%= claimed_jobs_nav_link %></li>
    <li><%= all_boats_nav_link %></li>
    <li><%= log_out_nav_link %></li>
  <% else %>
    <li><%= sign_up_nav_link %></li>
    <li><%= log_in_nav_link %></li>
  <% end %>
  </ul>
</nav>



<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>



<%= yield %>

</body>
</html>
